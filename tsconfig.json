{
  "compilerOptions": {
    "noEmit": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "lib": ["ES2015", "ES2016", "ES2017", "ES2018", "ES2019", "ES2020", "ESNext", "dom"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true
  },
  "include": ["./src/**/*"]
}
